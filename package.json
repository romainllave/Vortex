{
  "name": "vortex-desktop",
  "version": "0.1.1",
  "description": "Vortex desktop app (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "publish": "electron-builder --win --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/romainllave/Vortex.git"
  },
  "build": {
    "appId": "com.vortex.desktop",
    "productName": "Vortex",
    "files": [
      "**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    }
  }
}

